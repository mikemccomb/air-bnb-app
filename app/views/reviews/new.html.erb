<h1>New Review</h1>

<%= form_with method: "post", url: "/reviews" do |form| %>

  <div>
    <%=form.label :reservation_id%> <br>
    <%= form.text_field :reservation_id%>
  </div>
  <div>
    <%= form.label :rating %><br>
    <%= form.text_field :rating %>
  </div>

  <div>
    <%= form.label :comment %><br>
    <%= form.text_area :comment %>
  </div>

  <div>
    <%= form.submit "Submit Review" %>
  </div>
<% end %>